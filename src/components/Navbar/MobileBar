import Paths from "@/shared/Paths";
import { navbarLinkEntries, scrollAbout, scrollFaqs } from "@/shared/Links";
import { Link } from "react-router-dom";
import { useState } from "react";
import { Hamburger } from "@/assets/Hamburger";
import { Close } from "@/assets/Close";
import { HashLink } from "react-router-hash-link";

const linkStyles =
  "select-none p-1.5 transition duration-200 hover:text-bits-yellow-100";

const MobileBar = () => {
  const [isOpen, setIsOpen] = useState(false);
  return (
    <>
      <button
        type="button"
        onClick={() => setIsOpen(true)}
        className="ml-3 mt-2 inline-flex items-center p-2 text-white transition-colors hover:text-bits-yellow-100"
      >
        <Hamburger />
      </button>
      <aside
        id="default-sidebar"
        className={`fixed right-0 top-0 z-50 h-screen w-64 transition-transform ${
          isOpen ? "translate-x-0" : "translate-x-full"
        }`}
      >
        <div className="h-full overflow-y-auto rounded-l-lg bg-bits-blue-150 px-3 py-5">
          <div className="flex items-center justify-between p-1.5">
            <h5 className="text-base font-semibold uppercase text-gray-400">
              Menu
            </h5>
            {/* Close Button */}
            <button
              type="button"
              onClick={() => setIsOpen(false)}
              className="inline-flex items-center p-1.5 text-sm text-white transition-colors hover:text-bits-yellow-100"
            >
              <Close />
            </button>
          </div>

          {/* Divider Line */}
          <div className="my-5 h-0 w-auto border border-bits-cyan-100/50" />
        </div>
      </aside>
    </>
  );
};

export default MobileBar;
